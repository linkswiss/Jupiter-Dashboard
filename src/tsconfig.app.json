
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "types": ["node"]
  },
  "include": [
    "**/*.ts",

  ],
  "exclude": [
    "**/*.spec.ts"
  ],
